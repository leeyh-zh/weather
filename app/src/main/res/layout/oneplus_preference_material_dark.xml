<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:activatedBackgroundIndicator"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:minHeight="@dimen/oneplus_contorl_list_item_height_one_line1"
    android:paddingEnd="@dimen/oneplus_contorl_layout_margin_left2"
    android:paddingStart="@dimen/oneplus_contorl_layout_margin_left2">

    <LinearLayout
        android:id="@+id/icon_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:minWidth="@dimen/oneplus_contorl_layout_margin_left5"
        android:orientation="horizontal"
        android:paddingBottom="4.0dip"
        android:paddingEnd="12.0dip"
        android:paddingTop="4.0dip">

        <com.android.internal.widget.PreferenceImageView
            android:id="@android:id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/oneplus_contorl_icon_size_list"
            android:maxWidth="@dimen/oneplus_contorl_icon_size_list" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:paddingBottom="16.0dip"
        android:paddingTop="16.0dip">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/oneplus_contorl_text_color_primary" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@android:id/title"
            android:layout_below="@android:id/title"
            android:maxLines="10"
            android:textColor="@color/oneplus_contorl_text_color_secondary" />
    </RelativeLayout>

    <LinearLayout
        android:id="@android:id/widget_frame"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="end|center"
        android:orientation="vertical"
        android:paddingStart="16.0dip" />
</LinearLayout>